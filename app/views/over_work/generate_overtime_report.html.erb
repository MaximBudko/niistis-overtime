<%= javascript_tag do %>
  document.addEventListener('DOMContentLoaded', () => {
    const startInput = document.getElementById('start_date_picker');
    const endInput = document.getElementById('end_date_picker');
    const userContainer = document.getElementById('user_cards_container');

    function fetchUsers() {
      const startDate = startInput.value;
      const endDate = endInput.value;

      if (!startDate || !endDate) return;

      fetch(`/overtime_report/users_by_date?start_date=${startDate}&end_date=${endDate}`, {
        headers: { 'Accept': 'application/json' }
      })
      .then(response => response.json())
      .then(users => {
        userContainer.innerHTML = '';

        if (users.length === 0) {
          userContainer.innerHTML = '<p>–ù–µ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π —Å "–°–≤–µ—Ä—Ö—É—Ä–æ—á–Ω–æ–π" —Ä–∞–±–æ—Ç–æ–π –∑–∞ –≤—ã–±—Ä–∞–Ω–Ω—ã–π –ø–µ—Ä–∏–æ–¥.</p>';
          return;
        }

        users.forEach(user => {
          const card = document.createElement('label');
          card.className = 'user-card';

          const topLine = document.createElement('div');
          topLine.className = 'top-line';

          const checkbox = document.createElement('input');
          checkbox.type = 'checkbox';
          checkbox.name = 'user_ids[]';
          checkbox.value = user.id;

          const name = document.createElement('span');
          name.className = 'user-name';
          name.textContent = user.name;

          topLine.appendChild(checkbox);
          topLine.appendChild(name);

          const dates = document.createElement('div');
          dates.className = 'user-dates';

          dates.innerHTML = user.entries.map(entry => {
            const d = new Date(entry.date);
            const weekday = d.toLocaleDateString('ru-RU', { weekday: 'short' });
            return `${d.toLocaleDateString()} (${weekday}) ‚Äì ${entry.hours} —á`;
          }).join('<br>');

          card.appendChild(topLine);
          card.appendChild(dates);
          userContainer.appendChild(card);
        });
      });
    }
    

    startInput.addEventListener('change', fetchUsers);
    endInput.addEventListener('change', fetchUsers);

    let reportType = null;
    document.querySelectorAll("#ov-form button[type=submit]").forEach(btn => {
      btn.addEventListener("click", (e) => {
        reportType = e.target.value; // "excel" –∏–ª–∏ "dokladnaya"
      });
    });

    // --- —Å–∞–±–º–∏—Ç —á–µ—Ä–µ–∑ fetch ---
    const ovForm = document.getElementById('ov-form');
    if (ovForm) {
      ovForm.addEventListener('submit', (e) => {
        e.preventDefault();

        const uniq = Date.now().toString(36) + '-' + Math.random().toString(36).slice(2);
        const action = ovForm.action.split('?')[0] + '?request_id=' + uniq;

        const formData = new FormData(ovForm);
        if (reportType) formData.set("report_type", reportType);

        fetch(action, { method: 'POST', body: formData })
          .then(resp => resp.blob())
          .then(blob => {
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;

            if (reportType === "dokladnaya") {
              a.download = "–î–æ–∫–ª–∞–¥–Ω–∞—è.xlsx";
            } else {
              a.download = "–û—Ç—á–µ—Ç.xlsx";
            }

            document.body.appendChild(a);
            a.click();
            a.remove();
            window.URL.revokeObjectURL(url);
          });
      });
    }
  });
<% end %>

